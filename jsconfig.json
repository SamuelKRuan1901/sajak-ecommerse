{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "paths": {
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@assets/*": ["src/assets/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@pages/*": ["src/pages/*"],
      "@contexts/*": ["src/contexts/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
